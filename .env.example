# ═══════════════════════════════════════════════════════════════
# AquaBD Premium Hydration Marketplace
# Environment Configuration Template
# ═══════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────
# DATABASE (Neon PostgreSQL)
# ─────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/aquabd?sslmode=require"
DIRECT_URL="postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/aquabd?sslmode=require"

# ─────────────────────────────────────────────────────────────────
# NEXTAUTH v5
# ─────────────────────────────────────────────────────────────────
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-min-32-chars-here"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ─────────────────────────────────────────────────────────────────
# SSLCOMMERZ PAYMENT GATEWAY
# ─────────────────────────────────────────────────────────────────
# Sandbox credentials (switch to live for production)
SSL_STORE_ID="your_sandbox_store_id"
SSL_STORE_PASSWORD="your_sandbox_store_password"
SSL_IS_SANDBOX="true"

# URLs for payment callbacks
SSL_SUCCESS_URL="http://localhost:3000/api/pay/success"
SSL_FAIL_URL="http://localhost:3000/api/pay/fail"
SSL_CANCEL_URL="http://localhost:3000/api/pay/cancel"
SSL_IPN_URL="http://localhost:3000/api/pay/ipn"

# ─────────────────────────────────────────────────────────────────
# UPSTASH REDIS (Rate Limiting & Caching)
# ─────────────────────────────────────────────────────────────────
UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_token"

# ─────────────────────────────────────────────────────────────────
# CLOUDFLARE TURNSTILE (CAPTCHA)
# ─────────────────────────────────────────────────────────────────
TURNSTILE_SITE_KEY="your_turnstile_site_key"
TURNSTILE_SECRET_KEY="your_turnstile_secret_key"

# ─────────────────────────────────────────────────────────────────
# SENTRY (Error Monitoring)
# ─────────────────────────────────────────────────────────────────
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ─────────────────────────────────────────────────────────────────
# EMAIL (SMTP for notifications)
# ─────────────────────────────────────────────────────────────────
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_password"
EMAIL_FROM="AquaBD <noreply@aquabd.com>"

# ─────────────────────────────────────────────────────────────────
# FILE STORAGE (Cloudflare R2 or similar)
# ─────────────────────────────────────────────────────────────────
STORAGE_ENDPOINT=""
STORAGE_ACCESS_KEY=""
STORAGE_SECRET_KEY=""
STORAGE_BUCKET=""
STORAGE_PUBLIC_URL=""

# ─────────────────────────────────────────────────────────────────
# APP CONFIGURATION
# ─────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="AquaBD"
NEXT_PUBLIC_DEFAULT_LOCALE="bn"

# VAT Rate (15% for Bangladesh)
VAT_RATE="0.15"

# ─────────────────────────────────────────────────────────────────
# SECURITY
# ─────────────────────────────────────────────────────────────────
# Rate limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# Bcrypt rounds
BCRYPT_ROUNDS="12"

# Session expiry (in seconds)
SESSION_MAX_AGE="2592000"
